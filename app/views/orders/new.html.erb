<h1>Оформление заказа.</h1>

<%= form_with(model: @order) do |f| %>

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h3>Возникли ошибки:</h3>
      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, 'Имя Фамилия', class: 'form-label' %>
    <%= f.text_field :name, value: current_user&.full_name, class: 'form-control', placeholder: 'ФИО', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :email, 'Почта', class: 'form-label' %>
    <%= f.text_field :email, value: current_user&.email, class: 'form-control', placeholder: 'E-mail', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :phone, 'Телефон', class: 'form-label' %>
    <%= f.text_field :phone, value: '', class: 'form-control', placeholder: 'telephone' %>
  </div>

  <div class="field mb-3 form-check">
    <%= f.check_box :privacy, class: 'form-check-input' %>
    <%= f.label :privacy, 'Даю согласие на обработку персональных данных в соответствии с политикой конфиденциальности *', class: 'form-check-label' %>
  </div>


  <div class="mb-3">
    <%= f.submit 'Оформить', class: 'btn btn-primary'%>
  </div>
<% end %>