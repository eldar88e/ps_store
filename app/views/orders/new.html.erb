<h1>Оформление заказа.</h1>
<%= form_with(model: @order, data: { turbo: false }) do |f| %>
  <% if @order.errors.any? %>
    <h3>Ошибки:</h3>
    <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="mb-3">
    <%= f.label :full_name, 'Имя Фамилия', class: 'form-label' %>
    <%= f.text_field :full_name, value: current_user&.full_name, class: 'form-control', placeholder: 'ФИО', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :email, 'Почта', class: 'form-label' %>
    <%= f.text_field :email, value: current_user&.email, class: 'form-control', placeholder: 'E-mail', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :phone, 'Телефон', class: 'form-label' %>
    <%= f.text_field :phone, value: '', class: 'form-control', placeholder: 'telephone' %>
  </div>

  <div class="mb-3">
    <%= f.label :address, 'Адрес', class: 'form-label' %>
    <%= f.text_field :address, value: '', class: 'form-control', placeholder: 'address' %>
  </div>

  <div class="mb-3">
    <%= f.label :comments, 'Коментарий к заказу', class: 'form-label' %>
    <%= f.text_field :comments, class: 'form-control', placeholder: 'comments' %>
  </div>

  <div class="field mb-3 form-check">
    <%= f.check_box :privacy, class: 'form-check-input' %>
    <%= f.label :privacy, 'Даю согласие на обработку персональных данных в соответствии с политикой конфиденциальности *', class: 'form-check-label' %>
  </div>

  <div class="mb-3">
    <%= f.submit 'Оформить', class: 'btn btn-primary'%>
  </div>
<% end %>