<header>
  <%= turbo_frame_tag :notices, class: 'notice-group', data: { controller: "notices" } do %>
    <% flash.each do |key, value| %>
      <% [value].flatten.each do |i| %>
        <div class="alert alert-<%= key %>" role="alert">
          <%= i %>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <div class="container" style="margin-bottom: 3em; margin-top: 2em">
    <div class="row">
      <div class="col-12 col-md-6">
        <%= link_to "PS-store", root_path, title: 'Перейти на главную' %>
      </div>

      <div class="col-12 col-md-6">
        <%= turbo_frame_tag :cart_counter, class: '' do %>
          <%= render 'carts/cart_counter' %>
        <% end %>
      </div>
    </div>
  </div>

  <nav class="navbar navbar-expand-lg bg-light mb-3">
    <div class="container container-fluid">
      <a class="navbar-brand" href="/">PsStore</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="<%= games_path %>">Games</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="">Settings</a>
          </li>
        </ul>
      <% if user_signed_in? %>
          <div style="display: flex; align-items: center;">
            <div style="margin-right: 5px;">
              <span>Hello<span style="font-weight: bold;"> <%= current_user.full_name || current_user.email %></span>!</span>
              <% if current_user.avatar_url.present? %>
                <img src=<%= current_user.avatar_url %> alt="user-avatar" class="user-avatar"/>
              <% end %>
            </div>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
          </div>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: 'btn btn-primary' %>
      <% end %>
      </div>
    </div>
  </nav>
</header>
