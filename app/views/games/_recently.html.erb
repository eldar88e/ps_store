<% if recently.present? %>
  <div class="recently">
    <h2>Недавно смотрели:</h2>
    <div class="row">
      <% recently.each do |game| %>
        <div class="col-6 col-md-4 col-lg-3">
          <div class="item-game">
            <div class="wrap-img">
              <a href="<%= game_path(game) %>" title="<%= game.name %>">
                <div style="background-image: url('<%= game.img %>');" class="img-game"></div>
              </a>
            </div>
            <%= link_to game.name, game_path(game), title: game.name %>
            <div><%= game.price %>₽</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>