<div class="col-6 col-md-4 col-lg-3">
  <div class="item-game">
    <div class="wrap-img">
      <a href="<%= game_path(game) %>" title="<%= game.name %>">
        <div class="no-img-game">
          <div style="background-image: url('<%= game.img %>');" class="img-game">
            <% if game.rus_screen || game.rus_voice %>
              <div class="ru-flag"></div>
            <% end %>
          </div>
        </div>
      </a>
    </div>

    <div class="title-game">
      <%= link_to game.name, game_path(game), title: game.name %>
      <div><%= game.price %>â‚½</div>

      <%= render 'carts/create_cart_item', game_id: game.id %>
    </div>
  </div>
</div>
